{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Jekyll: Serve (Development)",
      "type": "shell",
      "command": "bundle exec jekyll serve --livereload --incremental",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Jekyll: Build (Production)",
      "type": "shell",
      "command": "JEKYLL_ENV=production bundle exec jekyll build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Rake: Generate Derivatives",
      "type": "shell",
      "command": "bundle exec rake generate_derivatives",
      "problemMatcher": []
    },
    {
      "label": "Rake: Generate Collection Info",
      "type": "shell",
      "command": "bundle exec rake generate_info",
      "problemMatcher": []
    },
    {
      "label": "Clean Project",
      "type": "shell",
      "command": "bundle exec jekyll clean",
      "problemMatcher": []
    },
    {
      "label": "Update Dependencies",
      "type": "shell",
      "command": "bundle update",
      "problemMatcher": []
    },
    {
      "label": "Validate Collection CSV",
      "type": "shell",
      "command": "bundle exec rake csv",
      "problemMatcher": []
    },
    {
      "label": "Generate Collection Metadata",
      "type": "shell",
      "command": "bundle exec rake generate_metadata",
      "problemMatcher": []
    }
  ]
}
