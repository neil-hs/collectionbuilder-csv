{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve (Development)",
      "type": "shell",
      "command": "bundle exec jekyll serve --livereload",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
      // Optional: uncomment to run automatically when opening the folder
      // "runOptions": {
      //   "runOn": "folderOpen" 
      // }
    },
    {
      "label": "Build (Production)",
      "type": "shell",
      "command": "rake deploy", // Uses the existing rake task
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true // Default build task (Ctrl+Shift+B or Cmd+Shift+B)
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
